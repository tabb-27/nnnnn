#include <stdio.h>

int main()
{
    double x;
    int n;
    scanf("%lf%d",&x,&n);
    
    if (n<1 || x<0){
        printf("ERROR");
        return 0;
    }
    
    double cur = 1;
    double res = 1;
    
    for (int i = 1; i <=n; i++){
        double mul = pow(x,2)/(double)(2*i*(2*i-1));
        cur *= mul;
        res += cur;
    }
    
    printf("%.4lf",res);
    return 0;
}
